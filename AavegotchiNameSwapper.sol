contract AavegotchiNameSwapper {

    using EnumerableMap for EnumerableMap.UintToAddressMap;

    // Struct for the two names being swapped
    // name1 is the caller, name2 should be the taker
    struct NameSwap {
        string name1;
        string name2;
        uint256 price;
    }

    IAavegotchi public aavegotchi;
    IERC20 public ghst;

    EnumerableMap.UintToAddressMap private originalOwner;
    mapping(uint256 => NameSwap) public swapRecords;

    event CreateSwap(uint256 indexed id, string desiredName);
    event CreateSale(uint256 indexed id, uint256 price);
    event RemoveSwap(uint256 indexed id);
    event TakeSell(uint256 indexed swapId, uint256 indexed takerId, uint256 price, string name);
    event TakeSwap(uint256 indexed swapId, uint256 indexed takerId, string name1, string name2);
    event SwapOwn(uint256 indexed swapId, uint256 indexed takerId, string name1, string name2);

    constructor(address _aavegotchi) {
        aavegotchi = IAavegotchi(_aavegotchi);
        ghst = IERC20(aavegotchi.ghstAddress());
    }

    /**
      @dev Proposes a swap, not publicly available
     */
    function _createSwap(uint256 id, string memory desiredName, uint256 price) internal {
        require(aavegotchi.ownerOf(id) == msg.sender, "Not owner");

        // Record the swap
        swapRecords[id] = NameSwap(
            _getName(id),
            desiredName,
            price
        );

        // Record original NFT owner
        originalOwner.set(id, msg.sender);

        // Let contract hold the NFT as escrow
        aavegotchi.transferFrom(msg.sender, address(this), id);
    }

    /**
     @dev Propose a swap between two names (current and desired) and deposit NFT into contract
     * price is set to 0
     */
    function createSwap(uint256 id, string calldata desiredName) external returns(bool) {
        _createSwap(id, desiredName, 0);
        emit CreateSwap(id, desiredName);
        return true;
    }

    /**
      @dev Propose a name sell. Allows anyone with the tokens can accept the swap
     * desiredName is set to "" (empty string) which will allow any tokenId to take the swap
     */
    function createSale(uint256 id, uint256 price) external returns(bool) {
        _createSwap(id, "", price);
        emit CreateSale(id, price);
        return true;
    }

    /**
     @dev Remove a proposed swap and get back the deposited NFT.
    */
    function removeSwap(uint256 id) external returns(bool) {
        require(msg.sender == originalOwner.get(id), "Not owner");

        originalOwner.remove(id);
        delete swapRecords[id];

        // Get back the original NFT
        aavegotchi.transferFrom(address(this), msg.sender, id);

        emit RemoveSwap(id);
        return true;
    }

    /**
    * @dev Take up an existing swap that's a sell. Only swaps the taker's name to the swap creator's name.
     */
    function takeSell(uint256 swapId, uint256 takerId, string calldata placeholder) external returns(bool){
        require(!nameUsed(placeholder), 'placeholder error');

        NameSwap memory nameSwapPair = swapRecords[swapId];

        // Only succeeds if desired name is "" (empty string)
        require((bytes(nameSwapPair.name2).length == 0), "Not sell swap");

        address owner = originalOwner.get(swapId);

        ghst.transferFrom(msg.sender, owner, nameSwapPair.price);

        // Give taker's NFT to contract for escrow
        aavegotchi.transferFrom(msg.sender, address(this), takerId);

        // set swapId to be placeholder
        aavegotchi.setAavegotchiName(swapId, placeholder);

        // Set takerId to be sawpId's name
        aavegotchi.setAavegotchiName(takerId, nameSwapPair.name1);

        // Transfer both NFTs back to their respective owners
        aavegotchi.transferFrom(address(this), msg.sender, takerId);
        aavegotchi.transferFrom(address(this), owner, swapId);

        emit TakeSell(swapId, takerId, nameSwapPair.price, nameSwapPair.name1);

        originalOwner.remove(swapId);
        delete swapRecords[swapId];
        return true;
    }

    /**
      @dev Take up an existing swap. Swaps the names and then returns the NFTs
      - Note: It is up to the caller to find a placeholder name that has not been used.
      - Front-ends can make this more convenient by selecting random strings.
     */
    function takeSwap(uint256 swapId, uint256 takerId, string calldata placeholder) external returns(bool){
        require(!nameUsed(placeholder), 'placeholder error');

        NameSwap memory nameSwapPair = swapRecords[swapId];

        // Require that taker's NFT's is actually the name requested by the swapPair
        require(sha256(bytes(toLower(_getName(takerId)))) ==
            sha256(bytes(toLower(nameSwapPair.name2))), "Not desired name");

        // Give taker's NFT to contract for escrow
        aavegotchi.transferFrom(msg.sender, address(this), takerId);

        // set swapId to be placeholder
        aavegotchi.setAavegotchiName(swapId, placeholder);

        // Set takerId to be sawpId's name
        aavegotchi.setAavegotchiName(takerId, nameSwapPair.name1);

        // Set swapId to be takerId's name
        aavegotchi.setAavegotchiName(swapId, nameSwapPair.name2);

        // Transfer both NFTs back to their respective owners
        aavegotchi.transferFrom(address(this), msg.sender, takerId);
        aavegotchi.transferFrom(address(this), originalOwner.get(swapId), swapId);

        emit TakeSwap(swapId, takerId, nameSwapPair.name1, nameSwapPair.name2);
        originalOwner.remove(swapId);
        delete swapRecords[swapId];
        return true;
    }


    function swapOwn(uint256 swapId, uint256 takerId, string calldata placeholder) external returns(bool){
        require(!nameUsed(placeholder), 'placeholder error');

        // Give NFT to contract for escrow
        aavegotchi.transferFrom(msg.sender, address(this), swapId);
        aavegotchi.transferFrom(msg.sender, address(this), takerId);

        string memory name1 = _getName(swapId);
        string memory name2 = _getName(takerId);

        aavegotchi.setAavegotchiName(swapId, placeholder);
        aavegotchi.setAavegotchiName(takerId, name1);
        aavegotchi.setAavegotchiName(swapId, name2);

        // Transfer both NFTs back to their respective owners
        aavegotchi.transferFrom(address(this), msg.sender, takerId);
        aavegotchi.transferFrom(address(this), msg.sender, swapId);

        emit SwapOwn(swapId, takerId, name1, name2);
        return true;
    }


    function _getName(uint _id) internal view returns (string memory) {
        IAavegotchi.AavegotchiInfo memory info = aavegotchi.getAavegotchi(_id);
        return info.name;
    }

    function toLower(string memory _name) internal pure returns (string memory) {
        bytes memory name = abi.encodePacked(_name);
        for (uint256 i; i < name.length; i++) {
            uint256 char = uint256(uint8(name[i]));
            if (char < 91 && char > 64) {
                name[i] = bytes1(uint8(char + 32));
            }
        }
        return string(name);
    }

    function nameUsed(string calldata _name) public view returns (bool) {
        return aavegotchi.aavegotchiNameAvailable(_name);
    }

    function getAllOpenSwaps() public view returns (uint256[] memory) {
        uint256 len = originalOwner.length();
        uint256[] memory swapList = new uint256[](len);
        for (uint256 i = 0; i < len; i++) {
            (uint256 id,) = originalOwner.at(i);
            swapList[i] = id;
        }
        return (swapList);
    }

    function getSwap(uint _id) public view returns(string memory, string memory, uint256, address) {
        return (swapRecords[_id].name1, swapRecords[_id].name2, swapRecords[_id].price, originalOwner.get(_id));
    }
}